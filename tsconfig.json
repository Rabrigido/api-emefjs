{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,           // ðŸ‘ˆ desactiva los errores por parÃ¡metros sin tipo
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "src/types.d.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
